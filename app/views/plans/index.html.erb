<div class="search-area">
  <form class="search-form">
    <input type="hidden" id="selected-location" name="place_id">
    <ul class="suggestions"></ul>
    <input type="text" class="search" name="place_name" placeholder="Search for a location" required>
    <label for="">Arrival date</label>
    <input type="date" name="arrival_date" value="<%= Date.current %>" required>
    <label for="">Departure date</label>
    <input type="date" name="departure_date" value="<%= Date.tomorrow %>" required>
    <button class="button-primary">Add to planner</button>
  </form>
</div>

<div class="u-cf planner">
  <%= render "plans" %>
  <div class="six columns map">Map goes here</div>
  <div class="three columns events-eats">Search for a location to view what's happening around it</div>
</div>

<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAVJjOAHWGEr2E1f5AMR2RZDoJ8maw41N4&callback=showMap">
</script>
